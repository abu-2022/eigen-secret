{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["hardhat", "@nomiclabs/hardhat-ethers"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@server/*": ["../server/dist/*"]
    },
    "resolveJsonModule": true,
  },
  "include": ["tasks", "test", "sdk/lib", "typechain/**/*.ts", "typechain/**/*.d.ts", "typechain/**/*.js"],
  "files": ["./hardhat.config.ts"]
}
